        function AddMenu() 
        {
            var kodeMenu = $("#TextboxKodeMenu").val();
            var namaMenu = $("#TextboxNamaMenu").val();
            var jenisMenu =  $("#TextboxJenisMenu").val();
            var hargaSatuan = $("#TextboxHargaSatuan").val();

            var ObjectMenu =
            {
                KodeMenu: kodeMenu,
                NamaMenu: namaMenu,
                JenisMenu: jenisMenu,
                hargaSatuan: hargaSatuan
            };

            console.log("Kode Menu : " + kodeMenu, "Nama Menu : " + namaMenu, "Jenis Menu : " + jenisMenu, "Harga Sauan : " + hargaSatuan);
            //alert("Kode Menu : " + kodeMenu, "Nama Menu : " + namaMenu, "Jenis Menu : " + jenisMenu, "Harga Sauan : " + hargaSatuan);
            if (confirm("Are you sure you want to add menu...?")) {
                $.ajax
                    ({
                        type: "POST",
                        url: "/MasterMenu/AddData/", body:
                        {
                            KodeMenu: kodeMenu,
                            NamaMenu: namaMenu,
                            JenisMenu: jenisMenu,
                            hargaSatuan: hargaSatuan
                        },
                        contentType: "application/json; charset=utf-8",
                        datatype: "JSON",
                        data: JSON.stringify(ObjectMenu),
                        success: function (response) 
                        {
                            if (response != null) 
                            {
                                alert("Successful add menu...!");
                                window.location.href = "/MasterMenu/MasterMenu";
                            }
                            else 
                            {
                                alert("Failed add menu, something went wrong...!");
                                window.location.href = "/MasterMenu/MasterMenu";
                            }
                        },
                        failure: function (response) 
                        {
                            alert(response.responseText);
                        },
                        error: function (response) 
                        {
                            alert(response.responseText);
                        }
                    });

                return true;
            }
            else {
                return false;
            }
        }

