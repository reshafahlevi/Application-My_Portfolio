            console.log("Kode Menu : " + kodeMenu);
            //alert("Kode Menu : " + kodeMenu);
            if (confirm("Are you sure you want to delete menu...?")) 
            {
                $.ajax
                ({
                    type: "POST",
                    url: "/MasterMenu/DeleteDataById/", body:
                    {
                        KodeMenu: kodeMenu
                    },
                    contentType: "application/json; charset=utf-8",
                    datatype: "JSON",
                    data: JSON.stringify(kodeMenu),
